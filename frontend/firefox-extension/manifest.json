{
  "name": "$name",
  "description": "Adds an '$keyword' Omnibox command and 'view source' links for the Android SDK",
  "version": "$version",
  "manifest_version": 2,
  "minimum_chrome_version": "73",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://developer.android.com/reference/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "omnibox": {
    "keyword": "$keyword"
  },
  "permissions": [
    "storage",
    "https://api.sdksearch.app/"
  ]
}
